{
    "name": "devineonline/smsbroadcast",
    "description": "PHP client for the SMS Broadcast API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "DevineOnline",
            "email": "composer@devineonline.com.au"
        }
    ],
    "require": {
        "php": "^7.3",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {"DevineOnline\\SmsBroadcast\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {
            "DevineOnline\\SmsBroadcast\\Tests\\Unit\\": "tests/unit",
            "DevineOnline\\SmsBroadcast\\Tests\\Integration\\": "tests/integration"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "blastcloud/guzzler": "^1.5"
    },
    "scripts": {
        "test": "mkdir -p .cache && phpunit --cache-result-file=.cache/phpunit"
    }
}
